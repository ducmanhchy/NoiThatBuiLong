@model BlogSystem.Web.Areas.Administration.ViewModels.Administration.MenuAdminViewModel
@using WebHelpers.Mvc5

@foreach (var item in Model.Menus)
{
    <li class="@Url.IsLinkActive("Index", item.ControlerName)">
        <a href="@Url.Action("Index", item.ControlerName, new { area = "Administration" })"><i class="fa fa-link"></i><span>@item.Name</span></a>
    </li>
}

