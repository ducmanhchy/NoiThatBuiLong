@if (!string.IsNullOrEmpty(ViewData["FacebookPageID"].ToString()))
{
    <!-- fb -->
    <!-- Messenger Plugin chat Code -->
    <div id="fb-root"></div>
    <!-- Your Plugin chat code -->
    <div id="fb-customer-chat" class="fb-customerchat"> </div>
    <script>
    var chatbox = document.getElementById('fb-customer-chat');
    chatbox.setAttribute("page_id", "@ViewData["FacebookPageID"].ToString()");
    chatbox.setAttribute("attribution", "biz_inbox");
    // Your SDK code
    window.fbAsyncInit = function () {
        FB.init({
            xfbml: true,
            version: 'v14.0'
        });
    };
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/vi_VN/sdk/xfbml.customerchat.js';
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
    </script>
    <!-- fb end -->
}
<!-- contact -->
<div id="btn-ct">
    <div id="all-ct">
        <!-- zalo -->
        <div id="zalo-ct" class="button-contact">
            <div class="ct-item">
                <div class="ct-circle-fill"></div>
                <div class="ct-img-circle">
                    <a target="_blank" href="https://zalo.me/@ViewData["PhoneNumber"].ToString().Replace(" ", "")">
                        <img src="data:image/png;base64,">
                    </a>
                </div>
            </div>
        </div>
        <!-- end zalo -->
        <!-- Phone -->
        <div id="phone-ct" class="button-contact">
            <div class="ct-item">
                <div class="ct-circle-fill"></div>
                <div class="ct-img-circle">
                    <a href="tel:@ViewData["PhoneNumber"].ToString().Replace(" ", "")">
                        <img src="data:image/png;base64,">
                    </a>
                </div>
            </div>
        </div>
        <!-- end phone -->
    </div>
</div>
<style>
    #btn-ct {
        position: fixed;
        bottom: 0;
        z-index: 99;
    }

    #all-ct #zalo-ct {
        transition: 1s all;
        -moz-transition: 1s all;
        -webkit-transition: 1s all;
    }

    #all-ct #phone-ct {
        transition: 0.7s all;
        -moz-transition: 0.7s all;
        -webkit-transition: 0.7s all;
    }

    #btn-ct .button-contact {
        position: relative;
    }

        #btn-ct .button-contact .ct-item {
            position: relative;
            visibility: visible;
            background-color: transparent;
            width: 90px;
            height: 90px;
            cursor: pointer;
            z-index: 11;
            -webkit-backface-visibility: hidden;
            -webkit-transform: translateZ(0);
            transition: visibility .5s;
            left: 0;
            bottom: 0;
            display: block;
        }

    #zalo-ct .ct-circle-fill {
        box-shadow: 0 0 0 0 #2196f3;
        background-color: rgba(33, 150, 243, 0.7);
    }

    #zalo-ct .ct-img-circle {
        background-color: #2196F3;
    }

    .ct-circle-fill {
        width: 65px;
        height: 65px;
        top: 12px;
        left: 12px;
        position: absolute;
        box-shadow: 0 0 0 0 #c31d1d;
        background-color: rgba(230, 8, 8, 0.7);
        border-radius: 50%;
        border: 2px solid transparent;
        -webkit-animation: ct-circle-fill 2.3s infinite ease-in-out;
        animation: ct-circle-fill 2.3s infinite ease-in-out;
        transition: all .5s;
        -webkit-transform-origin: 50% 50%;
        -ms-transform-origin: 50% 50%;
        transform-origin: 50% 50%;
        -webkit-animuiion: zoom 1.3s infinite;
        animation: zoom 1.3s infinite;
    }

    .ct-img-circle a {
        display: block;
        line-height: 37px;
    }

    .ct-img-circle {
        background-color: #e60808;
        width: 40px;
        height: 40px;
        line-height: 40px;
        top: 25px;
        left: 25px;
        position: absolute;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        -webkit-animation: ct-circle-fill 1s infinite ease-in-out;
        animation: ct-circle-fill 1s infinite ease-in-out;
    }

        .ct-img-circle img {
            max-height: 25px;
            max-width: 27px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            -moz-transform: translate(-50%,-50%);
            -webkit-transform: translate(-50%,-50%);
            -o-transform: translate(-50%,-50%);
        }

    #phone-ct .ct-circle-fill {
        opacity: 0.7;
        box-shadow: 0 0 0 0 #dd3333;
    }

    .phone-bar a, #phone-ct .ct-circle-fill, #phone-ct .ct-img-circle, #phone-ct .phone-bar a {
        background-color: #dd3333;
    }
</style>
