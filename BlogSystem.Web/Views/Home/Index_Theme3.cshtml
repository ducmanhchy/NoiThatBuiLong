@model BlogSystem.Web.ViewModels.Home.IndexHomeViewModel

@{
    ViewBag.Title = "OutStock";
}

@if (Model.Posts.Where(x => x.type == "SL_HOME").Count() > 0)
{
    <!-- slider area start -->
    <section class="slider__area slider__area-3 p-relative">
        <div class="slider-active-3">
            @foreach (var item in Model.Posts.Where(x => x.type == "SL_HOME").OrderBy(x => x.Ord))
            {
                <div class="single-slider single-slider-2 slider__height-6 d-flex align-items-center" data-background="@item.linkIMG">
                    @Html.Raw(item.Content);
                </div>
            }
        </div>
    </section>
    <!-- slider area end -->
}

@if (Model.Posts.Where(x => x.type == "BN_HOME").Count() > 0)
{
    <!-- banner__area-df start -->
    <div class="banner__area-df mt-10">
        @foreach (var item in Model.Posts.Where(x => x.type == "BN_HOME").OrderBy(x => x.Ord))
        {
            @Html.Raw(item.Content);
        }
    </div>
    <!-- banner__area-df end -->
}

@if (Model.Posts.Where(x => x.type == "PL_HOME").Count() > 0)
{
    <!-- product__view-area start -->
    <div class="product__view-area pt-60 pb-60">
        <div class="container custom-container-2">
            @Html.Raw(Model.Posts.Where(x => x.type == "PL_HOME").FirstOrDefault().Content);
        </div>
    </div>
    <!-- product__view-area end -->
}

@if (Model.Posts.Where(x => x.type == "VD_HOME").Count() > 0)
{
    <!-- video__area-df start -->
    <div class="container">
        <div class="video__area-df" data-background="@Model.Posts.Where(x => x.type == "VD_HOME").FirstOrDefault().linkIMG">
            <div class="video__content text-center">
                <div class="video__button mb-60">
                    <a data-fancybox href="@Model.Posts.Where(x => x.type == "VD_HOME").FirstOrDefault().LinkPost"><i class="fas fa-play"></i></a>
                </div>
                @Html.Raw(Model.Posts.Where(x => x.type == "VD_HOME").FirstOrDefault().Content)
            </div>
        </div>
    </div>
    <!-- video__area-df end -->
}

