@model BlogSystem.Web.Areas.Administration.ViewModels.Services.ServiceViewModel

@{
    ViewBag.Title = "Thêm dịch vụ";
}

<hr />

@using (Html.BeginForm("Create", "FT", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Title)

        @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Title, string.Empty, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Content)

        @Html.EditorFor(m => m.Content, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Content, string.Empty, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.type)

        @Html.DropDownListFor(m => m.type, Model.ListType, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.type, string.Empty, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Ord)

        @Html.EditorFor(m => m.Ord, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Ord, string.Empty, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LinkPost)

        @Html.EditorFor(m => m.LinkPost, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.LinkPost, string.Empty, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.isPublish)

        @Html.EditorFor(m => m.isPublish, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.isPublish, string.Empty, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Tạo mới</button>

        @Html.ActionLink("Cancel", "Index", new { area = "Administration" }, new { @class = "btn btn-danger" })
    </div>
}
