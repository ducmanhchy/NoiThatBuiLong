@model BlogSystem.Web.Areas.Administration.ViewModels.Excute.ExcuteViewModel

@{
    ViewBag.Title = "SQL";
}

<hr />

@using (Html.BeginForm("Query", "EXC", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Content)
    </div>
    <div class="form-group">
        @Html.TextAreaFor(m => m.Content, new { htmlAttributes = new { width = "100%", rows = "4" } })
        @Html.ValidationMessageFor(m => m.Content, string.Empty, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Truy vấn</button>

        @Html.ActionLink("Cancel", "Index", new { area = "Administration" }, new { @class = "btn btn-danger" })
    </div>
}

<div class="form-group">
    <label>Kết quả</label>
</div>
<div class="form-group">
    <textarea rows="4" width="100%">@ViewBag.Result</textarea>
</div>
